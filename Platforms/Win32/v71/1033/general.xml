<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <GeneralSchemaFilename>general</GeneralSchemaFilename>
    <UseGeneralSchema Condition="'$(UseDefaultPropertyPageSchemas)' != 'false' or '$(UseDefaultGeneralPropertyPageSchema)' != 'false'">true</UseGeneralSchema>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ConfigurationType)' == 'Makefile'">
    <GeneralSchemaFilename>general_makefile</GeneralSchemaFilename>
  </PropertyGroup>
  <ItemGroup Condition="'$(UseGeneralSchema)' == 'true'">
    <PropertyPageSchema Include="context\$(GeneralSchemaFilename).xml">
      <Context>Project</Context>
    </PropertyPageSchema>
    <PropertyPageSchema Include="context\$(GeneralSchemaFilename)_ps.xml">
      <Context>PropertySheet</Context>
    </PropertyPageSchema>
  </ItemGroup>
</Project>
